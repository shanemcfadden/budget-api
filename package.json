  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "yarn run copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.sql dist",
    "start": "pm2 start dist/app.js -i max --node-args=\"-r ./tsconfig-paths-bootstrap.js\"",
    "dev": "ts-node -r ./tsconfig-paths-bootstrap.js src/app.ts",
    "predev:watch": "yarn run copy-files",
    "dev:watch": "tsc -w & nodemon -r ./tsconfig-paths-bootstrap.js -w dist dist/app.js",
    "test": "mocha --recursive",
    "test:watch": "mocha --watch --recursive"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.15",
    "@types/chai-uuid": "^1.0.2",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chai": "^4.3.0",
    "chai-uuid": "^1.0.6",
    "copyfiles": "^2.4.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@types/sinon": "^9.0.10",
    "bcrypt": "^5.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.2.5",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.5",
    "sinon": "^9.2.4",
    "uuid": "^8.3.2"
  }
}
